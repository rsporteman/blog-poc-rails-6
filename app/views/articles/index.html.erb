<div class="page-content">
  <h1 class="text-center">Listing all articles</h1>

  <p>
    <%= link_to 'Create new article', new_article_path %>
  </p>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header">
              Featured
            </div>
            <div class="card-body">
              <h5 class="card-title font-italic">
                <%= link_to article.title, article_path(article), class: 'text-success' %>
              </h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <button class="btn btn-outline-success"><%= link_to 'View', article_path(article) %></button>
              <button class="btn btn-outline-primary"><%= link_to 'Edit', edit_article_path(article) %></button>
              <button class="btn btn-outline-danger"><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></button>
            </div>
            <div class="card-footer text-muted">
              <small>
                Created <%= time_ago_in_words(article.created_at) %> ago,
                edited  <%= time_ago_in_words(article.created_at) %> ago
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



